@model Project.Models.LoginViewModel

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
	.content-container {
		max-width: 600px;
	}

	.login-card {
		background: #fff;
		padding: 60px; /* Daha fazla padding */
		border-radius: 30px;
		box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
		max-width: 1100px; /* Genişlik artırıldı */
		width: 100%;
		margin: auto;
	}

		.login-card h2 {
			text-align: center;
			margin-bottom: 50px; /* Başlık için ekstra boşluk */
			font-size: 1.8rem; /* Daha büyük başlık */
		}

	.role-selection {
		display: flex;
		justify-content: center;
		gap: 80px; /* Roller arasındaki boşluk artırıldı */
		margin-bottom: 50px; /* Alt boşluk artırıldı */
	}

		.role-selection label {
			cursor: pointer;
			text-align: center;
		}

		.role-selection img {
			width: 150px; /* Daha büyük simgeler */
			height: 150px;
		}

		.role-selection input {
			display: none;
		}

		.role-selection label input:checked + img {
			border: 5px solid black; /* Daha kalın kenarlık */
			border-radius: 10%;
		}

	h2 {
		margin-bottom: 30px;
		font-size: 1.8rem; /* Daha büyük başlık */
		color: red;
		font-weight: bold;
	}

	.form-group {
		margin-bottom: 30px; /* Giriş alanları için ekstra boşluk */
	}

	.form-control {
		font-size: 1.2rem; /* Daha büyük giriş alanı yazısı */
		padding: 14px; /* Daha geniş giriş alanları */
	}

	button {
		font-size: 1.5rem; /* Daha büyük düğme yazısı */
		padding: 16px; /* Daha büyük düğme alanı */
	}
</style>

<div class="login-card">
	<h2>INFORMATION MANAGEMENT SYSTEM</h2>
	<form asp-action="LoginUser" method="post" id="loginForm">
		<div class="role-selection">
			<label>
				<input asp-for="Role" type="radio" value="Student" checked />
				<img src="~/images/Student.png" alt="Student" />
				<div>Student</div>
			</label>
			<label>
				<input asp-for="Role" type="radio" value="Advisor" />
				<img src="~/images/teacher.png" alt="Advisor" />
				<div>Advisor</div>
			</label>
		</div>

		<div class="form-group">
			<label for="Username">E-mail</label>
			<input asp-for="Username" class="form-control" id="Username" placeholder="Enter your E-mail" />
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="Password">Password</label>
			<input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your password" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary w-100">Login</button>
		<div class="text-center mt-4">
			<a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Forgot Password</a>
		</div>
	</form>

	@if (ViewBag.Message != null)
	{
		<p style="color: red; text-align: center; margin-top: 15px;">@ViewBag.Message</p>
	}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
